<!doctype html>
html.flexbox(lang="en" ng-app="app" ng-strict-di)

  head

    base(href= clientBasePath + slug + '/')

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    meta(name="google" content="notranslate")
    meta(name="pinterest" content="nopin")

    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")

    title= pageTitle

    link(rel="shortcut icon" href= clientBasePath + slug + '/img/favicon.ico')

    link(rel="stylesheet" href= clientBasePath + slug + '/font/roboto/font.css')

    if environment === 'production'
      link(rel="stylesheet" href= clientBasePath + slug + '/build/css/bundle.css?v=' + version)
