md-dialog(aria-label="Crop")
  md-toolbar
    .md-toolbar-tools
      h2 Crop
      span(flex)
      md-button.md-icon-button(ng-click="vm.cancel()")
        md-icon(md-font-set="material-icons") close
  md-dialog-content
    .md-dialog-content

      div(layout="row", layout-margin)

        md-input-container(flex)
          label Crop
          md-select(ng-model="vm.activeCrop")
            md-option(ng-repeat="crop in vm.availableCrops" ng-value="$index") {{crop.name}}

        md-button(ng-click="vm.coords = {}", aria-label="Clear") Clear

      div(layout="row", layout-margin)

        hj-cropify(coords="vm.coords", aspect-ratio="vm.cropSettings.ratio")
          img(ng-style="vm.cropSize()", ng-src="{{vm.getThumbnail()}}")

  md-dialog-actions(layout="row")
    span(flex)
    md-button(ng-click="vm.cancel()") Cancel
    md-button.md-accent(ng-click="vm.ok(vm.crops)") Ok
